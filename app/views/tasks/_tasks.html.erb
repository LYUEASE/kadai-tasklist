<ul class="media-list">
  
  <% tasks.each do |task| %>
    <li class="media">
      <div class="media-left">

      </div>
      
      <div class="media-body">
        
        <div>
          <%= link_to task.user.name, user_path(task.user) %> <span class="text-muted">posted at <%= task.created_at %></span>
        </div>
        
        <div>
          <p>タスク名：<%= task.content %></p>
          <p>状態：<%= task.status %></p>
          <%= link_to 'タスク操作', task_path(task) %>
        </div>
        
      </div>
      
    </li>
  <% end %>
  <%= paginate tasks %>
</ul>